---
import MDI18nLayout from '@layouts/MDI18nLayout.astro'
import { useLocale } from '@utils/locale'
import Markdown from '../content/about/about.md'

const { t } = useLocale(Astro.url)
const posts = await Astro.glob('../content/about/*.md')
---

<MDI18nLayout title={t('nav.recent')} slug="about" posts={posts}>
  <article class="prose">
    <Markdown />
  </article>
</MDI18nLayout>
